
{
  "name": "@raisket/backend",
  "version": "1.0.0",
  "description": "Raisket Mexican Fintech Platform - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "migrate": "node dist/scripts/migrate.js",
    "migrate:up": "node dist/scripts/migrate.js up",
    "migrate:down": "node dist/scripts/migrate.js down",
    "seed": "node dist/scripts/seed.js",
    "db:setup": "npm run migrate && npm run seed",
    "docker:build": "docker build -t raisket-backend .",
    "docker:run": "docker run -p 8000:8000 raisket-backend",
    "clean": "rm -rf dist coverage .turbo",
    "audit:security": "npm audit --audit-level moderate",
    "audit:licenses": "license-checker --summary"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.10.1",
    "zod": "^3.22.4",
    "axios": "^1.5.0",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "aws-sdk": "^2.1450.0",
    "@google-cloud/storage": "^7.0.1",
    "stripe": "^13.5.0",
    "limiter": "^2.1.0",
    "opossum": "^7.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "@sentry/node": "^7.66.0",
    "dd-trace": "^4.16.0",
    "newrelic": "^10.5.0",
    "prometheus-api-metrics": "^3.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "csurf": "^1.11.0",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "ioredis": "^5.3.2",
    "bull": "^4.11.3",
    "node-cron": "^3.0.2",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "validator": "^13.11.0",
    "sanitize-html": "^2.11.0",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/node": "^20.6.2",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/pg": "^8.10.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/uuid": "^9.0.3",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express-session": "^1.17.7",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/csurf": "^1.11.2",
    "@types/lodash": "^4.14.197",
    "@types/validator": "^13.11.1",
    "@types/sanitize-html": "^2.9.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.2.2",
    "tsx": "^3.12.8",
    "tsc-alias": "^1.8.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "license-checker": "^25.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raisket/raisket-fintech-mx.git"
  },
  "keywords": [
    "fintech",
    "mexico",
    "financial-services",
    "credit",
    "banking",
    "cnbv",
    "condusef",
    "api",
    "marketplace"
  ],
  "author": "Raisket Team",
  "license": "MIT",
  "private": true
}