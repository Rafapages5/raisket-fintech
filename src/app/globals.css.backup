@tailwind base;
@tailwind components;
@tailwind utilities;

/* Importar fuentes según tu jerarquía tipográfica */
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700&display=swap');

body {
  font-family: 'Lato', sans-serif;
  font-weight: 400;
}

.font-headline {
  font-family: 'Montserrat', sans-serif;
}

/* Clases de tipografía personalizadas */
.title-primary {
  font-family: 'Montserrat', sans-serif;
  font-weight: 800; /* ExtraBold */
  text-transform: uppercase;
}

.subtitle {
  font-family: 'Montserrat', sans-serif;
  font-weight: 500; /* Medium */
}

.section-header {
  font-family: 'Montserrat', sans-serif;
  font-weight: 700; /* Bold */
}

.body-text {
  font-family: 'Lato', sans-serif;
  font-weight: 400; /* Regular */
}

.quote-text {
  font-family: 'Lato', sans-serif;
  font-style: italic;
  font-weight: 300;
}

.caption-text {
  font-family: 'Lato', sans-serif;
  font-weight: 400;
  font-size: 0.875rem;
}

@layer base {
  :root {
    /* COLORES EXACTOS DE FINANCEHUB */
    
    /* Fondo principal - Gris muy claro */
    --background: 210 25% 97%; /* #f8f9fb - Fondo gris muy claro */
    --foreground: 222 47% 11%; /* #0f172a - Texto oscuro */
    
    /* Cards - Blanco puro */
    --card: 0 0% 100%; /* #ffffff */
    --card-foreground: 222 47% 11%;
    
    --popover: 0 0% 100%;
    --popover-foreground: 222 47% 11%;
    
    /* AZUL OSCURO DEL HEADER/FOOTER - Color exacto de la imagen */
    --primary: 217 33% 17%; /* #1e293b - Azul marino oscuro del header */
    --primary-foreground: 0 0% 100%; /* Blanco */
    
    /* Gris claro para elementos secundarios */
    --secondary: 214 32% 91%; /* #e2e8f0 */
    --secondary-foreground: 217 33% 17%;
    
    --muted: 210 40% 96%; /* #f1f5f9 */
    --muted-foreground: 215 16% 47%; /* #64748b - Gris texto secundario */
    
    /* VERDE CYAN/TURQUESA - Color exacto del texto "FINANCIERA PERFECTA" */
    --accent: 174 100% 41%; /* #00d4aa - Verde cyan brillante */
    --accent-foreground: 0 0% 100%; /* Blanco */
    
    /* Rojo para destructive */
    --destructive: 0 84% 60%; /* #ef4444 */
    --destructive-foreground: 0 0% 100%;
    
    --border: 214 32% 91%; /* #e2e8f0 */
    --input: 214 32% 91%;
    --ring: 174 100% 41%; /* Verde cyan para focus */
    
    /* Colores adicionales */
    --chart-1: 217 33% 17%; /* Azul marino */
    --chart-2: 174 100% 41%; /* Verde cyan */
    --chart-3: 38 92% 50%; /* Amarillo #f59e0b para ratings */
    --chart-4: 251 91% 60%; /* Púrpura badges */
    --chart-5: 0 84% 60%; /* Rojo */
    
    --radius: 0.5rem;
    
    /* Sidebar con colores exactos */
    --sidebar-background: 217 33% 17%; /* #1e293b */
    --sidebar-foreground: 0 0% 100%;
    --sidebar-primary: 174 100% 41%; /* Verde cyan */
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 174 100% 45%;
    --sidebar-accent-foreground: 0 0% 100%;
    --sidebar-border: 217 30% 25%;
    --sidebar-ring: 174 100% 41%;
  }

  .dark {
    /* Modo oscuro con los mismos colores */
    --background: 222 47% 11%; /* #0f172a */
    --foreground: 210 40% 98%;
    
    --card: 217 33% 17%; /* #1e293b */
    --card-foreground: 210 40% 98%;
    
    --popover: 217 33% 17%;
    --popover-foreground: 210 40% 98%;
    
    --primary: 217 33% 17%; /* #1e293b */
    --primary-foreground: 0 0% 100%;
    
    --secondary: 217 30% 22%;
    --secondary-foreground: 210 40% 98%;
    
    --muted: 217 30% 22%;
    --muted-foreground: 215 20% 65%;
    
    --accent: 174 100% 41%; /* #00d4aa */
    --accent-foreground: 0 0% 100%;
    
    --destructive: 0 73% 41%;
    --destructive-foreground: 0 0% 98%;
    
    --border: 217 30% 25%;
    --input: 217 30% 25%;
    --ring: 174 100% 41%;
    
    --sidebar-background: 222 47% 11%;
    --sidebar-foreground: 210 40% 98%;
    --sidebar-primary: 174 100% 41%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 174 100% 45%;
    --sidebar-accent-foreground: 0 0% 100%;
    --sidebar-border: 217 30% 25%;
    --sidebar-ring: 174 100% 41%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
}

/* ESTILOS EXACTOS DE FINANCEHUB */

/* Header con gradiente azul oscuro exacto */
.header-financehub {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
}

/* Footer con el mismo azul oscuro */
.footer-financehub {
  background: #1e293b;
}

/* Texto verde cyan para elementos destacados */
.text-accent-bright {
  color: #00d4aa;
}

/* Botones verdes exactos de FinanceHub */
.btn-success {
  background: #10b981;
  color: white;
  padding: 0.5rem 1.5rem;
  border-radius: 0.375rem;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn-success:hover {
  background: #059669;
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
}

/* Botones outline */
.btn-outline {
  border: 1px solid #e2e8f0;
  background: transparent;
  color: #1e293b;
  padding: 0.5rem 1.5rem;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
}

.btn-outline:hover {
  background: #f8f9fb;
  border-color: #cbd5e1;
}

/* Cards con el estilo exacto */
.card-product {
  background: white;
  border-radius: 0.5rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.card-product:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

/* Badges con colores exactos */
.badge-purple {
  background: #8b5cf6;
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.75rem;
  font-weight: 600;
}

.badge-orange {
  background: #f59e0b;
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.75rem;
  font-weight: 600;
}

/* Rating stars - Amarillo exacto */
.star-filled {
  color: #f59e0b;
  fill: #f59e0b;
}

.star-empty {
  color: #e2e8f0;
}

/* Input de búsqueda */
.search-input {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 2rem;
  padding: 0.75rem 1.5rem;
  width: 100%;
  max-width: 400px;
  transition: all 0.2s ease;
}

.search-input:focus {
  outline: none;
  border-color: #00d4aa;
  box-shadow: 0 0 0 3px rgba(0, 212, 170, 0.1);
}

/* Texto en el hero/header */
.hero-title {
  color: white;
  font-family: 'Montserrat', sans-serif;
  font-weight: 800;
  text-transform: uppercase;
  font-size: 2.5rem;
  line-height: 1.2;
}

.hero-subtitle {
  color: #cbd5e1;
  font-family: 'Lato', sans-serif;
  font-weight: 400;
  font-size: 1rem;
}

/* Scrollbar personalizado */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f5f9;
}

::-webkit-scrollbar-thumb {
  background: #00d4aa;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #00b894;
}

/* Secciones con fondo gris */
.section-gray {
  background: #f8f9fb;
}

/* Gradiente para textos especiales */
.text-gradient {
  background: linear-gradient(135deg, #00d4aa 0%, #10b981 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Animaciones */
@layer utilities {
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }
  
  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(10px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
}

/* Asegurar que el header y footer usen el azul oscuro */
header {
  background: #1e293b !important;
}

footer {
  background: #1e293b !important;
}

/* ESTILOS PARA BLOG */

/* Contenido de artículos con Prose mejorado */
.prose {
  font-family: 'Lato', sans-serif;
  color: #374151;
  line-height: 1.75;
}

.prose h1,
.prose h2,
.prose h3,
.prose h4,
.prose h5,
.prose h6 {
  font-family: 'Montserrat', sans-serif;
  font-weight: 700;
  color: #1e293b;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.prose h1 {
  font-size: 2.25rem;
  font-weight: 800;
}

.prose h2 {
  font-size: 1.875rem;
  border-bottom: 2px solid #e2e8f0;
  padding-bottom: 0.5rem;
}

.prose h3 {
  font-size: 1.5rem;
  color: #00d4aa;
}

.prose h4 {
  font-size: 1.25rem;
}

.prose p {
  margin-bottom: 1.5rem;
  font-size: 1.125rem;
  line-height: 1.8;
}

.prose a {
  color: #00d4aa;
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s ease;
}

.prose a:hover {
  color: #00b894;
  text-decoration: underline;
}

.prose ul,
.prose ol {
  margin: 1.5rem 0;
  padding-left: 2rem;
}

.prose li {
  margin: 0.5rem 0;
  font-size: 1.125rem;
}

.prose blockquote {
  border-left: 4px solid #00d4aa;
  margin: 2rem 0;
  padding: 1rem 2rem;
  background: #f8f9fb;
  font-style: italic;
  color: #64748b;
}

.prose code {
  background: #f1f5f9;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  color: #1e293b;
  font-weight: 500;
}

.prose pre {
  background: #1e293b;
  color: #e2e8f0;
  padding: 1.5rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  margin: 2rem 0;
}

.prose pre code {
  background: transparent;
  padding: 0;
  color: inherit;
}

/* Cards de blog con hover especial */
.blog-card {
  background: white;
  border-radius: 0.75rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1px solid #f1f5f9;
}

.blog-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  border-color: #00d4aa;
}

/* Tags de blog */
.blog-tag {
  background: linear-gradient(135deg, #00d4aa 0%, #10b981 100%);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 2rem;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Meta información del blog */
.blog-meta {
  color: #64748b;
  font-size: 0.875rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.blog-meta svg {
  width: 1rem;
  height: 1rem;
}

/* Navegación del blog */
.blog-nav-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: #00d4aa;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s ease;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
}

.blog-nav-link:hover {
  background: #f0fdfa;
  color: #00b894;
  transform: translateX(-2px);
}

/* Header del blog */
.blog-header {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  color: white;
  text-align: center;
  padding: 4rem 2rem;
  margin-bottom: 3rem;
}

.blog-header h1 {
  font-family: 'Montserrat', sans-serif;
  font-weight: 800;
  font-size: 3rem;
  margin-bottom: 1rem;
  text-transform: uppercase;
}

.blog-header p {
  font-size: 1.25rem;
  color: #cbd5e1;
  max-width: 600px;
  margin: 0 auto;
}

/* Responsive adjustments para blog */
@media (max-width: 768px) {
  .prose h1 {
    font-size: 1.875rem;
  }
  
  .prose h2 {
    font-size: 1.5rem;
  }
  
  .prose p,
  .prose li {
    font-size: 1rem;
  }
  
  .blog-header h1 {
    font-size: 2rem;
  }
  
  .blog-header p {
    font-size: 1rem;
  }
}
